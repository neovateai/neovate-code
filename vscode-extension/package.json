{
  "name": "neovate-assistant",
  "displayName": "neovate-assistant",
  "description": "Assistant for neovate.",
  "version": "0.0.3",
  "publisher": "sorrycc",
  "repository": {
    "type": "git",
    "url": "https://github.com/neovateai/neovate-code/tree/master/vscode-extension"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simple-mcp-server.start",
        "title": "Start MCP Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "node esbuild.js --production",
    "dev": "node esbuild.js --watch",
    "pretest": "pnpm run build",
    "test": "vscode-test",
    "biome:format": "biome format .",
    "package": "vsce package --no-dependencies --out ../vendor/takumi.vsix",
    "publish": "vsce publish --no-dependencies",
    "bump": "npm version patch"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.6"
  }
}
