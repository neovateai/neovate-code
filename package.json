{
  "name": "takumi",
  "version": "0.0.19",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "takumi": "./dist/cli.mjs"
  },
  "scripts": {
    "dev": "tsx ./src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:type": "tsc --project tsconfig.json --emitDeclarationOnly || true",
    "build:cli": "bun build src/cli.ts --minify --outfile dist/cli.mjs --target=node",
    "build:index": "bun build src/index.ts --minify --outfile dist/index.mjs --target=node",
    "build": "npm run build:cli && npm run build:index",
    "release": "utools release --git-tag --github-release --changelog",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "takumi",
    "takumi-cli",
    "ai"
  ],
  "authors": [
    "chencheng <sorrycc@gmail.com> (https://github.com/sorrycc)"
  ],
  "license": "MIT",
  "description": "AI pair programming CLI.",
  "devDependencies": {
    "@ai-sdk/openai": "^1.3.20",
    "@ai-sdk/xai": "^1.2.15",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.3",
    "@types/yargs-parser": "^21.0.3",
    "@umijs/clack-prompts": "^0.0.5",
    "@umijs/tools": "^0.1.36",
    "ai": "^4.3.10",
    "chokidar": "^4.0.3",
    "clipboardy": "^4.0.0",
    "date-fns": "^4.1.0",
    "defu": "^6.1.4",
    "dotenv": "^16.5.0",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "inquirer": "^12.6.0",
    "jsonrepair": "^3.12.0",
    "lint-staged": "^15.5.1",
    "lodash-es": "^4.17.21",
    "ollama-ai-provider": "^1.2.0",
    "pathe": "^2.0.3",
    "picocolors": "^1.1.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2",
    "yargs-parser": "^21.1.1",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5"
  },
  "volta": {
    "node": "22.11.0",
    "pnpm": "10.8.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  }
}
