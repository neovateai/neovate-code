    "marked": "^16.1.2",
    "marked-terminal": "^7.3.0",
    "minimatch": "^10.0.1",
    "open": "^10.2.0",
    "pathe": "^2.0.3",
    "picocolors": "^1.1.1",
    "portfinder": "^1.0.37",
    "react": "^19.1.1",
    "resolve": "^1.22.10",
    "spawn-rx": "^5.1.2",
    "strip-ansi": "^7.1.0",
    "tar": "^7.4.3",
    "turndown": "^7.2.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "valtio": "^2.1.5",
    "vitest": "^3.2.4",
    "wrap-ansi": "^9.0.0",
    "ws": "^8.18.3",
    "yargs-parser": "22.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6",
    "zustand": "^5.0.8"
  },
  "volta": {
    "node": "22.11.0",
    "pnpm": "10.13.1"
  },
  "packageManager": "pnpm@10.13.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": "biome format --write"
  },
  "publishConfig": {
    "access": "public"
  }
}
