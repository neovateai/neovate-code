{
  "name": "takumi",
  "version": "0.0.34",
  "type": "module",
  "files": [
    "dist",
    "vendor"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "ta": "dist/cli.mjs",
    "takumi": "./dist/cli.mjs"
  },
  "scripts": {
    "dev": "BROWSER_DIST_PATH=../../dist-browser tsx ./src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:type": "tsc --project tsconfig.json --emitDeclarationOnly --declarationDir dist-dts",
    "build:cli": "bun build src/cli.ts --external=react-devtools-core --external=ink --external=react --external=@fastify/compress --minify --outfile dist/cli.mjs --target=node",
    "build:index": "bun build src/index.ts --external=react-devtools-core --external=ink --external=react --external=@fastify/compress --minify --outfile dist/index.mjs --target=node",
    "build:dts": "npm run build:type && api-extractor run --local --verbose",
    "build:browser": "pnpm --filter @takumi/browser build",
    "build": "npm run build:cli && npm run build:index && npm run build:dts && npm run build:browser",
    "ci": "npm run typecheck && npm run format:check && npm run test",
    "release": "npm run ci && utools release --git-tag --github-release --changelog",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "takumi",
    "takumi-cli",
    "ai"
  ],
  "authors": [
    "chencheng <sorrycc@gmail.com> (https://github.com/sorrycc)"
  ],
  "license": "MIT",
  "description": "AI pair programming CLI.",
  "devDependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/deepseek": "^0.2.14",
    "@ai-sdk/google": "^1.2.19",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/provider": "^1.1.3",
    "@ai-sdk/xai": "^1.2.16",
    "@fastify/cors": "11.0.1",
    "@fastify/static": "^8.2.0",
    "@fastify/type-provider-typebox": "5.1.0",
    "@microsoft/api-extractor": "^7.52.8",
    "@modelcontextprotocol/inspector": "^0.14.3",
    "@openai/agents": "^0.0.8",
    "@openai/agents-extensions": "^0.0.8",
    "@openrouter/ai-sdk-provider": "^0.7.2",
    "@sinclair/typebox": "^0.34.35",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/debug": "^4.1.12",
    "@types/lodash-es": "^4.17.12",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/resolve": "^1.20.6",
    "@types/turndown": "^5.0.5",
    "@types/ws": "^8.18.1",
    "@types/yargs-parser": "^21.0.3",
    "@umijs/clack-prompts": "^0.0.7",
    "@umijs/tools": "^0.1.36",
    "ai": "^4.3.16",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "clipboardy": "^4.0.0",
    "date-fns": "^4.1.0",
    "debug": "^4.4.1",
    "defu": "^6.1.4",
    "dotenv": "^16.5.0",
    "fastify": "^5.4.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "ink-select-input": "^6.2.0",
    "lint-staged": "^16.1.2",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "picocolors": "^1.1.1",
    "portfinder": "^1.0.37",
    "prettier": "^3.5.3",
    "resolve": "^1.22.10",
    "spawn-rx": "^5.1.2",
    "tsx": "^4.20.3",
    "turndown": "^7.2.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "upgear": "^0.0.3",
    "valtio": "^2.1.5",
    "vitest": "^3.2.4",
    "ws": "^8.18.2",
    "yargs-parser": "18.1.3",
    "zod": "^3.25.67"
  },
  "dependencies": {
    "@fastify/compress": "8.0.3",
    "ink": "^6.0.0",
    "react": "^19.1.0"
  },
  "volta": {
    "node": "22.11.0",
    "pnpm": "10.8.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  },
  "upgear": {
    "files": [
      "vendor"
    ],
    "needReinstall": false,
    "changelogUrl": "https://github.com/umijs/takumi/blob/master/CHANGELOG.md"
  }
}
