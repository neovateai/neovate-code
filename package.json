{
  "name": "takumi",
  "version": "0.0.31",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "ta": "dist/cli.mjs",
    "takumi": "./dist/cli.mjs"
  },
  "scripts": {
    "dev": "tsx ./src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:type": "tsc --project tsconfig.json --emitDeclarationOnly --declarationDir dist-dts",
    "build:cli": "bun build src/cli.ts --minify --outfile dist/cli.mjs --target=node",
    "build:index": "bun build src/index.ts --minify --outfile dist/index.mjs --target=node",
    "build:dts": "npm run build:type && api-extractor run --local --verbose",
    "build": "npm run build:cli && npm run build:index && npm run build:dts",
    "ci": "npm run typecheck && npm run format:check && npm run test",
    "release": "npm run ci && utools release --git-tag --github-release --changelog",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "takumi",
    "takumi-cli",
    "ai"
  ],
  "authors": [
    "chencheng <sorrycc@gmail.com> (https://github.com/sorrycc)"
  ],
  "license": "MIT",
  "description": "AI pair programming CLI.",
  "devDependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/xai": "^1.2.16",
    "@microsoft/api-extractor": "^7.52.7",
    "@modelcontextprotocol/inspector": "^0.12.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^22.15.16",
    "@types/resolve": "^1.20.6",
    "@types/yargs-parser": "^21.0.3",
    "@umijs/clack-prompts": "^0.0.6",
    "@umijs/tools": "^0.1.36",
    "ai": "^4.3.15",
    "chokidar": "^4.0.3",
    "clipboardy": "^4.0.0",
    "date-fns": "^4.1.0",
    "defu": "^6.1.4",
    "dotenv": "^16.5.0",
    "fastmcp": "^1.27.6",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "inquirer": "^12.6.0",
    "jsonrepair": "^3.12.0",
    "lint-staged": "^15.5.2",
    "lodash-es": "^4.17.21",
    "marked": "^15.0.11",
    "marked-terminal": "^7.3.0",
    "ollama-ai-provider": "^1.2.0",
    "open": "^10.1.2",
    "pathe": "^2.0.3",
    "picocolors": "^1.1.1",
    "prettier": "^3.5.3",
    "resolve": "^1.22.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "upgear": "^0.0.3",
    "vitest": "^3.1.3",
    "yargs-parser": "^21.1.1",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "volta": {
    "node": "22.11.0",
    "pnpm": "10.8.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  },
  "upgear": {
    "needReinstall": false,
    "changelogUrl": "https://github.com/umijs/takumi/blob/master/CHANGELOG.md"
  }
}
